{
  "name": "Google Pinyin",
  "version": "0.0.12",
  "description": "支持拼音加加,小鹤等解决方法.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "input",
    "unlimitedStorage",
    "background",
    "storage"
  ],
  "host_permissions": [
    "https://olime.baidu.com/py?*",
    "https://www.google.com/inputtools/request?*",
    "https://www.google.cn/inputtools/request?*"
  ],
  "input_components": [
    {
    "name": "Chinese online pinyin",
    "type": "ime",
    "id": "zh-wasm-pinyin",
    "description": "支持拼音加加,小鹤等解决方法.",
    "language": "zh",
    "layouts": ["us"]
    },
    {
      "name": "Chinese online pinyin - 1",
      "type": "ime",
      "id": "zh-js-pinyin",
      "description": "",
      "language": "zh",
      "layouts": ["us"]
    }
  ],
  "options_page": "option.html",
  "content_security_policy": {
    "extension_page": "script-src 'self' 'wasm-eval'; object-src 'self'"
  }
}