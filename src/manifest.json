{
  "name": "双拼",
  "version": "0.0.1",
  "description": "支持拼音加加,小鹅等解决方法.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "input",
    "unlimitedStorage",
    "background",
    "storage"
  ],
  "input_components": [
    {
    "name": "双拼输入法",
    "type": "ime",
    "id": "zh-t-i0-shuangpin",
    "description": "支持拼音加加,小鹅等解决方法.",
    "language": "zh",
    "layouts": ["us"]
    }
  ],
  "options_page": "option.html",
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "<all_urls>"
  ]
}